<% content_for :page_title do %>
  <%= Spree.t(:liferay_settings) %>
<% end %>
<% content_for :page_actions do %>
	<li>
		<%= link_to Spree.t(:back_to_liferay_settings_list), spree.admin_liferay_settings_path, class: 'button' %>
	</li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @liferay_setting } %>

<%= form_for [:admin , @liferay_setting], :html => { :multipart => true } do |f| %>
  <fieldset class="no-border-top">
    <%= render 'form', f: f %>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
	  <%= button Spree.t('actions.create') %>
	  <%= link_to Spree.t('actions.cancel'), collection_url, :class => 'button' %>
	</div>
  </fieldset>
<% end %>